---

<section id="experiencia" class="py-20 px-6 max-w-6xl mx-auto">
    <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent mb-4">
            Experiencia Profesional
        </h2>
        <p class="text-slate-400 text-lg max-w-2xl mx-auto">
            Mi trayectoria profesional desarrollando soluciones tecnológicas innovadoras
        </p>
    </div>

    <div class="relative pl-12">
        <div class="absolute left-5 top-0 bottom-0 w-0.5 bg-gradient-to-b from-blue-500 via-purple-500 to-pink-500 opacity-80"></div>

        <div class="space-y-12">
            {experiencies.map((exp, index) => (
                <div class="relative group">
                    
                    <div class="ml-8">
                        <div class="bg-slate-900/70 backdrop-blur-sm hover:bg-slate-900/90 transition-all duration-500 p-6 rounded-2xl border border-slate-700/50 hover:border-slate-600 shadow-xl hover:shadow-2xl transform hover:-translate-y-2 group-hover:scale-[1.02]">
                            <div class="flex items-start justify-between mb-4 flex-wrap gap-4">
                                <div class="flex-1 min-w-0 pr-4">
                                    <h3 class="text-xl font-bold text-yellow-400 mb-1 group-hover:text-yellow-300 transition-colors">
                                        {exp.title}
                                    </h3>
                                    <h4 class="text-lg font-semibold text-white mb-1">
                                        {exp.company}
                                    </h4>
                                    {exp.location && (
                                        <p class="text-sm text-slate-400 flex items-center">
                                            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                                            </svg>
                                            {exp.location}
                                        </p>
                                    )}
                                </div>
                                <div class={`px-4 py-2 rounded-full bg-gradient-to-r ${exp.bgColor} text-white text-sm font-semibold shadow-lg flex-shrink-0`}>
                                    {exp.period.start} - {exp.period.end}
                                </div>
                            </div>

                            <ul class="space-y-3 mb-6">
                                {exp.description.map((desc) => (
                                    <li class="flex items-start text-slate-300 text-sm leading-relaxed">
                                        <svg class="w-2 h-2 mt-2 mr-3 flex-shrink-0" viewBox="0 0 8 8">
                                            <circle cx="4" cy="4" r="4" fill="#60a5fa" />
                                        </svg>
                                        <span>{desc}</span>
                                    </li>
                                ))}
                            </ul>

                            {exp.technologies && (
                                <div class="border-t border-slate-700 pt-4">
                                    <p class="text-xs font-semibold text-slate-400 mb-3 uppercase tracking-wider">
                                        Tecnologías utilizadas
                                    </p>
                                    <div class="flex flex-wrap gap-2">
                                        {exp.technologies.map((tech) => (
                                            <span class="px-3 py-1 bg-slate-800/80 text-slate-300 text-xs rounded-full border border-slate-600/50 hover:border-slate-500 hover:bg-slate-700/80 transition-all duration-200">
                                                {tech}
                                            </span>
                                        ))}
                                    </div>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>

</section>

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
    
    .group:hover .animate-float {
        animation: float 3s ease-in-out infinite;
    }

    @media (prefers-reduced-motion: no-preference) {
        .group {
            opacity: 0;
            transform: translateY(50px);
            animation: slideInUp 0.8s ease-out forwards;
        }
        
        .group:nth-child(1) { animation-delay: 0.1s; }
        .group:nth-child(2) { animation-delay: 0.2s; }
        .group:nth-child(3) { animation-delay: 0.3s; }
        .group:nth-child(4) { animation-delay: 0.4s; }
    }
    
    @keyframes slideInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .backdrop-blur-sm {
        backdrop-filter: blur(8px);
    }

    .group:hover .bg-slate-900\/70 {
        background: rgba(15, 23, 42, 0.95);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.8);
    }

</style>